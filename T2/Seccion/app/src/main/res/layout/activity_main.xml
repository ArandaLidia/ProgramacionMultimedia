<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ToggleButton
            android:id="@+id/toggleSelection"
            android:checked="true"
            android:textOff="Desactivado"
            android:textOn="Activado"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"></ToggleButton>
        <TextView
            android:id="@+id/textoToggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Activado"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="25sp"></TextView>

    </LinearLayout>
    <Button
        android:id="@+id/btnComprobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Comprobar"></Button>
</LinearLayout>